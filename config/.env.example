# ==========================================
# Law Firm Extraction System Configuration
# ==========================================
# Copy this file to config/.env and update with your actual values
# IMPORTANT: Never commit .env file with actual credentials

# ==========================================
# Environment Configuration
# ==========================================
ENVIRONMENT=local  # Options: 'local' or 'production'

# ==========================================
# Database Configuration
# ==========================================
# For Local PostgreSQL
LOCAL_DATABASE_URI=postgresql://username:password@localhost:5432/law_firm_extraction

# For Supabase (production/cloud)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_DATABASE_URI=postgresql://username:password@host:5432/database

# Database Pool Settings (optional)
# DB_MAX_CONNECTIONS=20
# DB_TIMEOUT=30
# DB_POOL_SIZE=5

# ==========================================
# Storage Configuration
# ==========================================
# STORAGE_TYPE=supabase  # Options: 'supabase' or 'local'
# STORAGE_BUCKET=law-firm-websites
# STORAGE_BASE_PATH=

# ==========================================
# Vector Store Configuration
# ==========================================
# VECTOR_TABLE_NAME=document_vectors
# VECTOR_EMBEDDING_DIM=768
# VECTOR_QUERY_NAME=match_documents

# ==========================================
# Extraction Configuration
# ==========================================
# Chunking Settings
# EXTRACTION_CHUNK_SIZE=5000
# EXTRACTION_CHUNK_OVERLAP=500

# Model Settings
# EXTRACTION_MODEL_TYPE=llama3.1:8b
# EXTRACTION_EMBEDDER_TYPE=nomic-embed-text
# EXTRACTION_TEMPERATURE=0.0
# EXTRACTION_TOP_P=0.95
# EXTRACTION_MAX_TOKENS=2048
# EXTRACTION_SEED=42
# EXTRACTION_NUM_CTX=8192

# Retrieval Settings
# EXTRACTION_K_CHUNKS=3
# EXTRACTION_SIMILARITY_THRESHOLD=0.7
# EXTRACTION_BATCH_SIZE=5
# EXTRACTION_RETRY_ATTEMPTS=3

# Feature Flags
# EXTRACTION_USE_RERANKING=false
# EXTRACTION_USE_QUERY_EXPANSION=false
# EXTRACTION_CONFIDENCE_SCORES=true

# ==========================================
# GPU Optimizations (RTX 3090 24GB)
# ==========================================
# Uncomment and adjust these for GPU optimization
# EXTRACTION_CHUNK_SIZE=8000
# EXTRACTION_NUM_CTX=16384
# EXTRACTION_BATCH_SIZE=10
# EMBEDDING_BATCH_SIZE=100

# ==========================================
# Ollama Configuration
# ==========================================
OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_TIMEOUT=30000

# For GPU support (uncomment if using GPU)
# OLLAMA_NUM_GPU=1
# OLLAMA_GPU_LAYERS=35

# ==========================================
# Logging Configuration
# ==========================================
# LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
# LOG_FILE=./logs/extraction.log
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# Performance Configuration
# ==========================================
# PERF_MAX_WORKERS=4
# PERF_ENABLE_CACHING=true
# PERF_CACHE_TTL=3600
# PERF_USE_MMAP=true
# PERF_USE_MLOCK=false

# ==========================================
# Path Configuration
# ==========================================
# DATA_DIR=data
# OUTPUT_DIR=data/output
# LOGS_DIR=logs

# ==========================================
# Notes
# ==========================================
# 1. Never commit this file with actual credentials
# 2. Use strong passwords for database connections
# 3. Keep API keys secure and rotate regularly
# 4. For production, use environment-specific configs
# 5. Monitor resource usage and adjust batch sizes accordingly
# 6. GPU settings require CUDA 11.8+ and compatible drivers