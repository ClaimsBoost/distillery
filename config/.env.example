# ==========================================
# REQUIRED SETTINGS
# ==========================================

# Environment
ENVIRONMENT=local  # Used for is_production checks

# Database (Required - choose local OR Supabase)
LOCAL_DATABASE_URI=postgresql://username:password@localhost:5432/claimsboost
# For Supabase:
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_DATABASE_URI=postgresql://username:password@host:5432/database

# LLM Provider Configuration
EXTRACTION_LLM_PROVIDER=ollama  # ollama or gemini
EXTRACTION_OLLAMA_MODEL=llama3.1:8b  # Required for Ollama
EXTRACTION_GEMINI_MODEL=gemini-2.5-flash  # Required for Gemini
EXTRACTION_GEMINI_API_KEY=your_api_key  # Required for Gemini

# Embeddings (Required)
EXTRACTION_EMBEDDER_TYPE=nomic-embed-text

# Ollama Endpoint
OLLAMA_BASE_URL=http://localhost:11434

# Generation Parameters (used in ollama.py and gemini.py)
EXTRACTION_TEMPERATURE=0.2
EXTRACTION_TOP_P=0.95

# Used only for Ollama
OLLAMA_EXTRACTION_SEED=42  # Ollama-specific
OLLAMA_NUM_CTX=8192  # Ollama context window

# Chunking (used in base_extractor.py)
EXTRACTION_CHUNK_SIZE=5000
EXTRACTION_CHUNK_OVERLAP=500

# Cost Tracking (used in base_extractor.py)
# EXTRACTION_TRACK_COSTS=true  # Track costs for Gemini


